doctype html
html(lang="en")
block variables
  - var title = title || (homepage ? PrismicDOM.RichText.asText(homepage.data.title) : "Recipe Box")
head
  title #{title}
  link(rel="icon", href="/favicon.ico")
  link(async, rel="stylesheet" href="https://use.typekit.net/egd1fzm.css")
  link(rel="stylesheet", href="/styles/app.css")
  meta(name="viewport", content="width=device-width, initial-scale=1")

  if AllowPreview
    // Required for Previews and Experiments
    script
      = ctx ? "window.prismic = { endpoint: '" + ctx.endpoint + "' };" : ""
    script(async, src="//static.cdn.prismic.io/prismic.min.js")
  
  if homepage && homepage.data.primary_color
    style(type='text/css').
      :root { --highlight-color: #{homepage.data.primary_color}; }
body
  include ../includes/navbar.pug
  block body
  block scripts
