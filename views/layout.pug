block variables

doctype html
html(lang="en")
  head
    - var title = title || homepage ? PrismicDOM.RichText.asText(homepage.data.title) : "Recipe Box"
    title #{title}
    link(rel="icon", href="/favicon.ico")
    link(async, rel="stylesheet", href="https://fonts.googleapis.com/css?family=Open+Sans:400,400i,700,700i|Noto+Serif:400,400i,700,700i")
    link(rel="stylesheet", href="/styles/app.css")
    meta(name="viewport", content="width=device-width, initial-scale=1")

    if AllowPreview
      // Required for Previews and Experiments
      script
        = ctx ? "window.prismic = { endpoint: '" + ctx.endpoint + "' };" : ""
      script(async, src="//static.cdn.prismic.io/prismic.min.js")
  body
    include ../includes/navbar.pug

    div.container.is-fluid
      div.main-content
        block body

    block scripts
