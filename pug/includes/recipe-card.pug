div.card.recipe
  if recipe.data.image
    div.card-image
      a.image(href=`/recipe/${recipe.uid}`)
        img(src=recipe.data.image.url)
  div.card-content
    a.title.is-4(href=`/recipe/${recipe.uid}`)
      = PrismicDOM.RichText.asText(recipe.data.name)
    if recipe.tags && recipe.tags.length > 0
      div.tags
        each tag in recipe.tags
          a.tag(href=`/tag/${tag}`)= tag